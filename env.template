# ==================================================================
# Document RAG System - Environment Configuration Template
# ==================================================================
# Copy this file to .env and fill in your actual values
# Command: cp env.template .env

# ==================================================================
# REQUIRED CONFIGURATION
# ==================================================================

# OpenAI API Key (REQUIRED)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Drive Folder ID (REQUIRED for document monitoring)
# Get from: Google Drive folder URL https://drive.google.com/drive/folders/YOUR_FOLDER_ID
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id_here

# ==================================================================
# QDRANT VECTOR DATABASE (REQUIRED)
# ==================================================================

# Qdrant Connection URL
QDRANT_URL=http://localhost:6333

# Qdrant Collection Name
QDRANT_COLLECTION=documents

# ==================================================================
# GOOGLE DRIVE AUTHENTICATION
# ==================================================================

# Google OAuth Credentials File Path
GOOGLE_CREDENTIALS_PATH=credentials.json

# Google OAuth Token Storage Path (auto-generated)
GOOGLE_TOKEN_PATH=token.json

# ==================================================================
# DOCUMENT PROCESSING SETTINGS
# ==================================================================

# OpenAI Embedding Model
EMBEDDING_MODEL=text-embedding-3-large

# Text Chunking Settings
CHUNK_SIZE=3000
CHUNK_OVERLAP=300

# ==================================================================
# OPTIONAL ENHANCEMENTS
# ==================================================================

# Cohere API Key (for advanced reranking)
# COHERE_API_KEY=your_cohere_api_key_here

# ==================================================================
# SYSTEM SETTINGS
# ==================================================================

# Logging Level
LOG_LEVEL=INFO

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Backend Service Port
BACKEND_PORT=8001

# ==================================================================
# OPENTELEMETRY CONFIGURATION
# ==================================================================

# Service identification
OTEL_SERVICE_NAME=document-rag-system
OTEL_SERVICE_VERSION=1.0.0
OTEL_ENVIRONMENT=development

# Export configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_EXPORTER_OTLP_HEADERS=

# Alternative HTTP endpoint (use if GRPC is not available)
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
# OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf

# Console export for development (set to true for local debugging)
OTEL_CONSOLE_EXPORT=true

# Trace sampling (1.0 = 100%, 0.1 = 10%)
OTEL_TRACE_SAMPLE_RATE=1.0

# Instrumentation configuration
OTEL_INSTRUMENT_LOGGING=true
OTEL_INSTRUMENT_REQUESTS=true
OTEL_INSTRUMENT_SQLITE=true

# Log correlation (adds trace context to logs)
OTEL_PYTHON_LOG_CORRELATION=true

# Resource attributes (optional custom attributes)
OTEL_RESOURCE_ATTRIBUTES=

# Popular OTLP endpoints (uncomment and configure as needed):
# Jaeger (local): http://localhost:14268/api/traces
# Zipkin (local): http://localhost:9411/api/v2/spans
# OTLP Collector (local): http://localhost:4317 (gRPC) or http://localhost:4318 (HTTP)
# Grafana Cloud: https://otlp-gateway-prod-us-central-0.grafana.net/otlp
# Honeycomb: https://api.honeycomb.io:443
# Datadog: https://trace.agent.datadoghq.com:443

