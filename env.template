# ==================================================================
# Document RAG System - Environment Configuration Template
# ==================================================================
# Copy this file to .env and fill in your actual values
# Command: cp env.template .env

# ==================================================================
# REQUIRED CONFIGURATION
# ==================================================================

# OpenAI API Key (REQUIRED)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Drive Folder ID (REQUIRED for document monitoring)
# Get from: Google Drive folder URL https://drive.google.com/drive/folders/YOUR_FOLDER_ID
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id_here

# ==================================================================
# QDRANT VECTOR DATABASE (REQUIRED)
# ==================================================================

# Qdrant Connection URL
QDRANT_URL=http://localhost:6333

# Qdrant Collection Name
QDRANT_COLLECTION=documents

# ==================================================================
# GOOGLE DRIVE AUTHENTICATION
# ==================================================================

# Google OAuth Credentials File Path
GOOGLE_CREDENTIALS_PATH=credentials.json

# Google OAuth Token Storage Path (auto-generated)
GOOGLE_TOKEN_PATH=token.json

# ==================================================================
# DOCUMENT PROCESSING SETTINGS
# ==================================================================

# OpenAI Embedding Model
EMBEDDING_MODEL=text-embedding-3-large

# Text Chunking Settings
CHUNK_SIZE=3000
CHUNK_OVERLAP=300

# ==================================================================
# OPTIONAL ENHANCEMENTS
# ==================================================================

# Cohere API Key (for advanced reranking)
# COHERE_API_KEY=your_cohere_api_key_here

# ==================================================================
# SYSTEM SETTINGS
# ==================================================================

# Logging Level
LOG_LEVEL=INFO

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Backend Service Port
BACKEND_PORT=8001

